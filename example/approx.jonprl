Infix 7 "~" := ceq.
Infix 7 "≼" := approx.

Theorem ceq-refl-thru-approx : [ {x:base} x ~ x ]
{
  intro; aux {auto};
  capprox; areflexivity
}.

Postfix 11 "⇓" := has-value.

Operator not : (0).
Prefix 10 "¬" := not.
[¬ P] =def= [ P -> void ].

Theorem bottom-diverges : [ ¬ bot ⇓ ] {
  unfold <not>;
  intro; aux {auto; unfold <has-value>; auto};
  bot-div #1
}.
